<!DOCTYPE html>
<html>
<head>
	<title>Family</title>
	<meta charset="utf-8">
	<meta name="viewport" content="width=device-width, initial-scale=1, user-scalable=no">
	<link rel="stylesheet" type="text/css" href="{{ base_url() }}aset/vendor/bootstrap/css/bootstrap.min.css">
	<style type="text/css">
		body {
			padding-top: 70px;
			padding-bottom: 70px;
		}

		img {
			max-width: 100%;
		}

		.isinya-gambar {
			padding: 0;
		}

		.sembunyi {
			display: none;
		}

		.bagian-cari {
			margin-top: .7rem;
		}
	</style>
</head>
<body>
	<nav class="navbar navbar-default navbar-fixed-top">
	  <div class="container-fluid">
	    <!-- Brand and toggle get grouped for better mobile display -->
	    <div class="navbar-header">
	      <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1" aria-expanded="false">
	        <span class="sr-only">Toggle navigation</span>
	        <span class="icon-bar"></span>
	        <span class="icon-bar"></span>
	        <span class="icon-bar"></span>
	      </button>
	      <a class="navbar-brand" href="{{ site_url() }}">Family</a>
	    </div>

	    <!-- Collect the nav links, forms, and other content for toggling -->
	    <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
	      <ul class="nav navbar-nav">
	        <li><a href="{{ site_url() }}tambah">Tambah Data</a></li>
	      </ul>
	    </div><!-- /.navbar-collapse -->
	  </div><!-- /.container-fluid -->
	</nav>
	<div class="container">
		{% block isi %}{% endblock %}
	</div>
	{% block di_luar_container %}{% endblock %}
	<script src="{{ base_url() }}aset/vendor/jquery/jquery-3.4.1.min.js"></script>
	<script src="{{ base_url() }}aset/vendor/bootstrap/js/bootstrap.min.js"></script>
	{% block skrip %}{% endblock %}
</body>
</html>